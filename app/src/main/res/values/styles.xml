<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.RecommendationApp.TextInputLayout.SquareBox"
        parent="Widget.RecommendationApp.TextInputLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.RecommendationApp.TextInputLayout.SquareBox</item>
        <item name="shapeAppearance">@style/ShapeAppearance.RecommendationApp.SquareSmallComponent</item>
    </style>

    <style name="Widget.RecommendationApp.TextInputLayout"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.RecommendationApp.TextInputLayout</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/orange_500</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <style name="ThemeOverlay.RecommendationApp.TextInputLayout.SquareBox" parent="">
        <item name="hintEnabled">true</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox</item>
    </style>

    <style name="ThemeOverlay.RecommendationApp.TextInputLayout" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="hintEnabled">false</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox</item>
    </style>

    <style name="ShapeAppearance.RecommendationApp.SquareSmallComponent"
        parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15%</item>
    </style>

    <style name="ShapeAppearance.RecommendationApp.SmallComponent"
        parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ThemeOverlay.RecommendationApp.BottomSheetDialog"
        parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheet</item>
        <item name="shapeAppearance">@style/ShapeAppearance.RecommendationApp.LargeComponent</item>
    </style>

    <style name="ModalBottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="enableEdgeToEdge">true</item>
        <item name="behavior_skipCollapsed">true</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ShapeAppearance.RecommendationApp.LargeComponent"
        parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="Widget.RecommendationApp.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/background_chip_tint_default</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/stroke_tint</item>
        <item name="android:textColor">@color/text_chip_tint_default</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="Widget.RecommendationApp.Chip.Main" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/background_chip_tint_recommendations</item>
        <item name="android:textColor">@color/text_chip_tint_default</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="Widget.RecommendationApp.Chip.More" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/purple_200</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="Widget.RecommendationApp.Chip.Mark" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/green_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="Widget.RecommendationApp.Chip.Like" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/orange_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="Widget.RecommendationApp.Chip.Contact" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="Widget.RecommendationApp.Chip.Social" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/gray_200</item>
        <item name="android:textColor">@color/black</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="Widget.RecommendationApp.Chip.Checked" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="Widget.RecommendationApp.Chip.Unchecked" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/orange_200</item>
        <item name="android:textColor">@color/black</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="Widget.RecommendationApp.CollapsingToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.RecommendationApp.CollapsingToolbar</item>
    </style>

    <style name="ThemeOverlay.RecommendationApp.CollapsingToolbar" parent="">
        <item name="contentScrim">@color/white</item>
        <item name="collapsedTitleTextColor">@color/black</item>
        <item name="expandedTitleTextColor">@color/white</item>
        <item name="expandedTitleGravity">center_horizontal|bottom</item>
    </style>
    
    <style name="Widget.RecommendationApp.SquareButton" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.RecommendationApp.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.RecommendationApp.SquareSmallComponent</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.RecommendationApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.RecommendationApp.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.RecommendationApp.SmallComponent</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.RecommendationApp.CancelButton" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.RecommendationApp.CancelButton</item>
        <item name="shapeAppearance">@style/ShapeAppearance.RecommendationApp.SmallComponent</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ThemeOverlay.RecommendationApp.Button" parent="">
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="ThemeOverlay.RecommendationApp.CancelButton" parent="">
        <item name="colorPrimary">@color/gray_200</item>
        <item name="colorOnPrimary">@color/gray_700</item>
    </style>
</resources>